<%= render 'shared/errors', obj: @user %>

<div class="card">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <p class='form-title'>Sign Up</p>
    <form class="form-row">
      <div class="col">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>
      <div class="col">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, id:"inputPhonenumber" , class: "form-control" ,placeholder: "xxx-xxx-xxxx" %>
      </div>
      <div class="col">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.label :confirm_password %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.submit(@user.new_record? ? 'Sign up' : 'Update your account', class: "btn btn-lg btn-primary btn-block btn-signin") %>
      </div>
      <p class="signup-link"><%= link_to 'Log in', login_path %></p>
    </form>
  <% end %>
</div>
